{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2015",
    "target": "es2017",
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "moduleResolution": "node"
  },
  "include": ["source/**/*", "node_modules/handlebars/types"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
