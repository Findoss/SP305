.icon {
  display: inline-block;
  width: 20px;
  height: 20px;
  margin: 0;
  padding: 0;
  background-size: 20px;
  background-position: center center;
  background-repeat: no-repeat;

  &--profile {
    background-image: url('../../../assets/images/icons/profile.svg');
  }

  &--done {
    background-image: url('../../../assets/images/icons/done.svg');
  }
  &--done-done {
    background-image: url('../../../assets/images/icons/done_done.svg');
  }
}
